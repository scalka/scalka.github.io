---
import { Image } from "astro:assets";
const {
  src,
  alt,
  class: className,
  widths = [480, 800, 1200],
  sizes = "(max-width: 700px) 100vw, 520px",
} = Astro.props;
---

<Image
  class={`responsive-image ${className}`.trim()}
  src={src}
  alt={alt}
  class={className}
  widths={widths}
  sizes={sizes}
/>
