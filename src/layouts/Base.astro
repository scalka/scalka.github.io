---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/main.css";

type SocialLink = {
  platform: string;
  identity?: string;
  urlPattern?: string;
  url?: string;
};

type BaseProps = {
  title?: string;
  siteTitle: string;
  lang?: string;
  dir?: string;
  footerText?: string;
  socialLinks?: SocialLink[];
};

const {
  title,
  siteTitle,
  lang = "en",
  dir = "ltr",
  footerText,
  socialLinks = [],
} = Astro.props as BaseProps;

const pageTitle = title ? `${title} | ${siteTitle}` : siteTitle;
---

<!doctype html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="keywords"
      content="digital garden, portfolio, frontend development, ux engineer"
    />
    <meta name="author" content="Sylwia CaÅ‚ka-Verhulst" />
    <meta name="robots" content="index, follow" />
    <title>{pageTitle}</title>
    <slot name="head" />
  </head>
  <body>
    <div class="wrapper">
      <header>
        <Header />
      </header>
      <main>
        <div class="sash-wrapper">
          <div class="sash flex flex-justify-center">
            <span>WORK IN PROGRESS</span>
          </div>
        </div>
        <slot />
      </main>
      <Footer footerText={footerText} socialLinks={socialLinks} />
    </div>
  </body>
</html>
